<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.activity_modo_singleplayer" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/ivFotoJogador1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
              />
        <ImageView
            android:id="@+id/ivFotoJogador2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" android:layout_margin="3dp">
        <TextView
            android:layout_margin="1dp"
            android:id="@+id/tvNomeJogador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"

            android:textStyle="bold" />
        <TextView
            android:layout_margin="1dp"
            android:id="@+id/tvNomeJogador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="3dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" android:layout_margin="3dp">
        <TextView
            android:layout_margin="1dp"
            android:id="@+id/tvPecasJ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"

            android:textStyle="bold" />
        <TextView
            android:layout_margin="1dp"
            android:id="@+id/tvPecasJ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="3dp"
            android:textStyle="bold" />
    </LinearLayout>

        <GridView
        android:id="@+id/tabuleiro"
        android:layout_width="match_parent"
         android:maxHeight="360dp"
        android:maxWidth="360dp"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:stretchMode="columnWidth"
         android:numColumns="auto_fit"
        android:padding="1dp"
         android:gravity="center"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" android:layout_margin="3dp">
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/playAgain"
             android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passTurn"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>