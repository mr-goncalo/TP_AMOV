<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.activity_modo_singleplayer" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"  android:rotation="180">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playAgain"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passTurn"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:rotation="180"
        android:orientation="horizontal" android:layout_margin="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2">
            <ImageView
                android:id="@+id/ivFotoJogador2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_weight="2" android:gravity="left">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/tvNomeJogador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textStart"
                android:layout_marginRight="3dp"
                android:textStyle="bold" />
            <TextView
                android:layout_margin="1dp"
                android:text="label das peças"
                android:id="@+id/tvPecasJ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_weight="3"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <GridView
        android:id="@+id/tabuleiro"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:maxHeight="360dp"
        android:maxWidth="360dp"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit"
        android:padding="1dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2">
        <ImageView
            android:id="@+id/ivFotoJogador1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_marginRight="2dp"

             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_weight="2" android:gravity="left">
        <TextView
            android:layout_margin="1dp"
            android:id="@+id/tvNomeJogador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="textStart"
            android:layout_marginRight="3dp"
            android:textStyle="bold" />
         <TextView
            android:layout_margin="1dp"
            android:text="label das peças"
            android:id="@+id/tvPecasJ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textAlignment="gravity"
            android:layout_weight="3"
            android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playAgain"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passTurn"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>