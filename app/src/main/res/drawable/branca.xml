<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"

        >
        <solid
            android:color="#206B39"/>

        <stroke
            android:width="1dp"
            android:color="@android:color/darker_gray" />
        <size
            android:width="90px"
            android:height="90px"/>

     </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@android:color/black"/>
            <stroke android:width="6dp" android:color="@android:color/transparent"/>

        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@android:color/white"/>
            <stroke android:width="7dp" android:color="@android:color/transparent"/>
            <size
                android:width="90px"
                android:height="90px"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->

</layer-list>